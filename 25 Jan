#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>

using namespace std;
int main() {
    int arr[4];
    for(int i=0;i<4;i++)
    {
        cin>>arr[i];
     }
    int sum=0;
    cout<<"P1 (WT=0), ";
    for(int i=1;i<4;i++)
    {
     sum+=arr[i-1];        
     cout<<"P"<<i+1<<" (WT="<<sum<<")";
     if(i<3)
     cout<<", ";
    }
        
    return 0;
}


2ND PROGRAM->

#include <bits/stdc++.h>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    map<int,int> mp1;
    map<int,int> mp2;
    for(int i=0;i<4;i++)
    {
       int a,b,c;
        cin>>a>>b>>c;
        mp1[b]=a;
        mp2[b]=c;
    }
    vector<int> vec;
    int sum=0;
    for(auto it: mp2)
    {
    if(sum==0)
        vec.push_back(0);
        else
       vec.push_back(sum-it.first);
       sum+=it.second;
    }
    map<int,int> mp3;
    int i=0;
    for(auto it: mp1)
    {
        mp3[it.second]=vec[i];
        i++;
    }
    int x=0;
    for(auto it: mp3)
    {
        cout<<"P"<<it.first<<" (WT="<<it.second<<")";
            if(x<3)
                cout<<", ";
        x++;
    }
    return 0;
}

