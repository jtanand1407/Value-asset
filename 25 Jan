using namespace std;
int main() {
    int arr[4];
    for(int i=0;i<4;i++)
    {
        cin>>arr[i];
     }
    int sum=0;
    cout<<"P1 (WT=0), ";
    for(int i=1;i<4;i++)
    {
     sum+=arr[i-1];        
     cout<<"P"<<i+1<<" (WT="<<sum<<")";
     if(i<3)
     cout<<", ";
    }
        
    return 0;
}
